@model IEnumerable<NZWalks.UI.Models.DTO.DifficultyDto> 
@{
}
<h1 class="mt-3">Difficulty</h1>

<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Difficulty" asp-action="Add">Add Difficulty</a>
</div>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Difficulty</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var difficulty in Model)
        {
            <tr>
                <td>@difficulty.Id</td>
                <td>@difficulty.Name</td>
                <td>
                    <a asp-controller="Difficulty" asp-action="Edit" asp-route-id="@difficulty.Id" class="btn btn-light">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>